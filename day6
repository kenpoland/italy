    <h2>Interactive Map</h2>
    <div id="map" class="map"></div>
  </div>

  <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
  <script>
    const map = L.map('map').setView([43.4, 10.5], 10);

    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
      attribution: '&copy; OpenStreetMap contributors'
    }).addTo(map);

    const start = L.marker([43.4011, 10.8616]).addTo(map)
      .bindPopup('Villa Nencini, Volterra').openPopup();

    const end = L.marker([43.4622, 10.3571]).addTo(map)
      .bindPopup('Villa Tara, Quercianella');

    const route = L.polyline([
      [43.4011, 10.8616],
      [43.3900, 10.7000],
      [43.4200, 10.5000],
      [43.4622, 10.3571]
    ], {color: 'blue'}).addTo(map);

    map.fitBounds(route.getBounds());
  </script>
