    const map = L.map('map').setView([43.4086, 11.3045], 10);

    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
      attribution: '&copy; OpenStreetMap contributors'
    }).addTo(map);

    const start = L.marker([43.4675, 11.0422]).addTo(map)
      .bindPopup('Start: Donna Nobile Affittacamere').openPopup();

    const end = L.marker([43.3189, 11.3310]).addTo(map)
      .bindPopup('End: The Siena Roofs');

    const route = L.polyline([
      [43.4675, 11.0422],
      [43.4222, 11.1234],
      [43.3890, 11.2100],
      [43.3500, 11.2700],
      [43.3189, 11.3310]
    ], { color: 'blue' }).addTo(map);
