  <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
  <script>
    const map = L.map('map').setView([43.6, 10.9], 9);

    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
      attribution: '&copy; OpenStreetMap contributors'
    }).addTo(map);

    const start = L.marker([43.7176, 10.9455]).addTo(map).bindPopup("Hotel Il Sole, Empoli");
    const end = L.marker([43.4672, 11.0421]).addTo(map).bindPopup("B&B Donna Nobile, San Gimignano");

    const route = L.polyline([
      [43.7176, 10.9455],
      [43.6500, 10.9800],
      [43.5700, 11.0300],
      [43.5000, 11.0500],
      [43.4672, 11.0421]
    ], { color: 'blue' }).addTo(map);

    map.fitBounds(route.getBounds());
  </script>
